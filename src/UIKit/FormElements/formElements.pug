                    input(class="defTextField dateDropdown darkShade25", type="text", value="ДД.ММ.ГГГГ")
                    .expendMore
            .block
                h3.bold.Upp date Dropdown
                .dropdown
                    input(class="defTextField dateDropdown darkShade25", type="text", value="19.08.2019")
                    .expendMore
        .block
            h3.bold.Upp filter date dropdown
        .dropdown
