        .dropdownArrowForward
            input(class="defTextField sub darkShade25", type="e-mail", value="Email")
            .arrowForward
        .block.flex.jconbetween.middleWidth
            h3.bold.Upp dropdown
            h3.regularText.Upp.darkShade50 Default
